{
  "version": 2,
  "outputDirectory": "public",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/sse", "destination": "/api?path=sse" },
    { "source": "/mcp", "destination": "/api?path=mcp" },
    { "source": "/authorize", "destination": "/api?path=authorize" },
    { "source": "/callback", "destination": "/api?path=callback" },
    { "source": "/token", "destination": "/api?path=token" },
    { "source": "/register", "destination": "/api?path=register" },
    { "source": "/privacy", "destination": "/api?path=privacy" },
    { "source": "/terms", "destination": "/api?path=terms" },
    { "source": "/remove", "destination": "/api?path=remove" },
    { "source": "/:path*", "destination": "/api" }
  ]
}
